#!/bin/bash
#SBATCH --job-name="MPI please work ?"
#SBATCH --ntasks=2
#SBATCH --cpus-per-task=1
#SBATCH --time=05:00
#SBATCH --output=mpi_out.out

module load OpenMPI

mpicc fdtd_mpi.c -o bin/fdtd_mpi -lm -g -fsanitize=address
cd ./example_inputs/simple3d
srun ../../bin/fdtd_mpi param_3d.txt 2 1 1
cd ../..